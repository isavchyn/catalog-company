{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Officessid</th>
                <td>{{ person.officessId }}</td>
            </tr>
            <tr>
                <th>Companyid</th>
                <td>{{ person.companyId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ person.phone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('persons_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
