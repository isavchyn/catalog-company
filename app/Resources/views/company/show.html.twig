{% extends 'base.html.twig' %}

{% block title %}{{ company.name }}{% endblock %}

  {% block body %}
    <div class="content-block"> 

      <div class="text-left">
        <a href="{{ path('company_index') }}"><i class="fa fa-reply" aria-hidden="true"></i></a>         
      </div> 

      <div class="text-right">
       

        {{ form_start(delete_form) }}
        <button class="btn btn-link" type="submit"><i class="fa fa-times fa-lg" aria-hidden="true"></i></button>
        {{ form_end(delete_form) }}   
         <a href="{{ path('company_edit', { 'id': company.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>     

      </div>

      <div class="text-center">
        <h1>{{ company.name }}</h1>
        Дата створення: {{ company.createdAt | date('Y-m-d')  }}<br>
      </div>

     
      <p class="text-right">{{ company.site }}</p><br>

      <h4>Description: </h4>
      <p class="text-justify"> {{ company.description }}</p><br>
      


    </div>
  {% endblock %}
